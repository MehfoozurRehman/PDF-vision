{
  "name": "pdf-vision",
  "version": "1.0.0",
  "description": "Professional PDF editing application by MF Visions",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "next build",
    "build:electron": "npm run build && electron-builder",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "pack:win": "electron-builder --win",
    "dist": "electron-builder",
    "format": "npx prettier . --write"
  },
  "keywords": [
    "pdf",
    "editor",
    "electron",
    "nextjs",
    "desktop",
    "mf-visions"
  ],
  "author": "Mohammad Fahad Alghammas - MF Visions",
  "license": "MIT",
  "homepage": "https://mfvisions.com",
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@react-pdf-viewer/highlight": "^3.12.0",
    "@react-pdf-viewer/page-navigation": "^3.12.0",
    "@react-pdf-viewer/search": "^3.12.0",
    "@react-pdf-viewer/selection-mode": "^3.12.0",
    "@react-pdf-viewer/toolbar": "^3.12.0",
    "@react-pdf-viewer/zoom": "^3.12.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "fabric": "^5.5.2",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.18.0",
    "jspdf": "^2.5.2",
    "next": "^14.2.35",
    "node-forge": "^1.3.3",
    "pdf-lib": "^1.17.1",
    "pdf2pic": "^3.2.0",
    "pdfjs-dist": "^3.11.174",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.6.0",
    "react-pdf": "^7.7.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "uuid": "^9.0.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.19.27",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.35",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mfvisions.pdfvision",
    "productName": "PDF Vision",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
