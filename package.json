{
  "name": "pdf-vision",
  "version": "1.0.0",
  "description": "Professional PDF editing application by MF Visions",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "next build",
    "build:electron": "npm run build && electron-builder",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "pdf",
    "editor",
    "electron",
    "nextjs",
    "desktop",
    "mf-visions"
  ],
  "author": "Mohammad Fahad Alghammas - MF Visions",
  "license": "MIT",
  "homepage": "https://mfvisions.com",
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@react-pdf-viewer/highlight": "^3.12.0",
    "@react-pdf-viewer/page-navigation": "^3.12.0",
    "@react-pdf-viewer/search": "^3.12.0",
    "@react-pdf-viewer/selection-mode": "^3.12.0",
    "@react-pdf-viewer/toolbar": "^3.12.0",
    "@react-pdf-viewer/zoom": "^3.12.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "fabric": "^5.3.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.16.4",
    "jspdf": "^2.5.1",
    "next": "^14.0.0",
    "node-forge": "^1.3.1",
    "pdf-lib": "^1.17.1",
    "pdf2pic": "^3.0.4",
    "pdfjs-dist": "^3.11.174",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-pdf": "^7.7.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@types/uuid": "^9.0.6",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.51.0",
    "eslint-config-next": "^14.0.0",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mfvisions.pdfvision",
    "productName": "PDF Vision",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
